@model IEnumerable<_23dh111133_BE_MyStore.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success">DANH SÁCH DANH MỤC</h2>


<table class="table bg-info col-lg-12 col-ms-6">
    <tr>
        <th class="bg-success col-lg-8 col-ms-4">
            @Html.DisplayNameFor(model => model.CategoryName)
            TÊN DANH MỤC
        </th>
        <th class="bg-success ol-lg-4 col-ms-2"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Cập nhật", "Edit", new { id=item.CategoryID },new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.CategoryID }, new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>

<div class="form-group">
    <div class="col-md-offset-3 col-md-9">
        @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>
