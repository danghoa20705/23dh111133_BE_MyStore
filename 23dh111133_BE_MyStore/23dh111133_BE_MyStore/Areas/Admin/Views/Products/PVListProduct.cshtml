@model _23dh111133_BE_MyStore.Models.ViewModel.ProductSearchVM

<head>
    <style>
        img {
            max-width: 150px;
            height: 150px;
        }
    </style>
</head>

@if (Model.Products != null && Model.Products.Any())
{
    <h2 class="bg-success">DANH SÁCH SẢN PHẨM</h2>
    <table class="table bg-info col-lg-12 col-ms-6 col-ms-3">
        <thead>
            <tr>
                <th class="bg-success col-md-1">Hình ảnh </th>
                <th class="bg-success col-md-3">Tên sản phẩm </th>
                <th class="bg-success col-md-2">Đơn giá</th>
                <th class="bg-success col-md-2">Danh mục</th>
                <th class="bg-success col-md-4"></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td><img src="@Html.DisplayFor(modelItem => item.ProductImage)" /></td>
                    <td>@Html.DisplayFor(modelItem => item.ProductName) </td>
                    <td>@Html.DisplayFor(modelItem => item.ProductPrice) </td>
                    <td> @Html.DisplayFor(modelItem => item.Category.CategoryName)</td>

                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductID }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Không tìm được sản phẩm phù hợp</p>
}

<dv class="form-group">
    <div class="col-md-offset-8 col-md-4">
         @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
    </div>
</dv>